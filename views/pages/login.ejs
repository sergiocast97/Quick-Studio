<div class="entry_page login">

    <!-- Login Area -->
    <div class="entry_panel login">

      <!-- Area to go register -->
      <div class="alternative_area">
        <p class="message">Don't have an account yet?</p>
        <a class="primary_button" href="/register">Create Account</a>
      </div>

      <!-- Form Area -->
      <div class="form_area">
        <h1 class="title"><%- title %></h1>

        <form action="/login" method="POST">

          <div class="input_text">
            <div class="input_container">
                <label class="input_label" for="login_email" >Email</label>
                <input id="login_email" type="email" name="email" required />
            </div>
          </div>

          <div class="input_text">
            <div class="input_container">
                <label class="input_label" for="login_password">Password</label>
                <input id="login_password" type="password" name="password" required />
            </div>
          </div>
          
          <button class="primary_button" type="submit">Login</button>
        
        </form>

        <% if (messages.error) { %>
          <%= messages.error %>
        <% } %>

      </div>
      
      <!-- Back to Website -->
      <div class="website_area">
        <a class="tertiary_button" href="#">Go back to website Â»</a>
      </div>
            
    </div>

    <!-- Background area -->
    <%- include("../components/entry_background", { headline: "Welcome<br>back!"}); %>

</div>